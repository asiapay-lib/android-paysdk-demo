<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Button.Blue.Padded_32">
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
    </style>
    <style name="Button.Blue">
        <item name="android:background">@drawable/selector_blue_button</item>
        <item name="android:textColor">@color/selector</item>
        <item name="android:minHeight">50dp</item>
    </style>
    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="RedErrorTextInput" parent="Widget.Design.TextInputLayout">
        <item name="errorTextAppearance">@style/ErrorTypeAppearance</item>
    </style>
    <style name="ErrorTypeAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/nav_circular_notify_pending</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
